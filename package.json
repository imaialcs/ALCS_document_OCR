{
  "name": "alcs-document-ocr",
  "private": true,
  "version": "1.1.3",
  "description": "会計事務所向けの文書OCRアプリケーションです。請求書、領収書、通帳などの画像をOCRで読み取り、データを処理し、Excelファイルとしてエクスポートします。",
  "author": "alcs",
  "repository": "github:imaialcs/ALCS_document_OCR",
  "main": "main.js",
  "scripts": {
    "dev": "npm run build:preload && concurrently \"vite\" \"electron .\"",
    "build": "npm run build:renderer && npm run build:preload",
    "build:renderer": "vite build",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:python": "pyinstaller excel_handler.py --onefile --distpath dist/excel_handler --name excel_handler",
    "dist": "npm run clean-dist && npm run build && npm run build:python && electron-builder",
    "start": "electron .",
    "preinstall": "npx rimraf node_modules/.cache/electron-builder",
    "clean-dist": "npx rimraf dist build_output"
  },
  "dependencies": {
    "@google/genai": "^1.16.0",
    "@handsontable/react-wrapper": "^16.1.1",
    "buffer": "^6.0.3",
    "debug": "^4.4.1",
    "dotenv": "^17.2.2",
    "electron-log": "^5.1.5",
    "electron-updater": "^6.1.7",
    "exceljs": "^4.4.0",
    "graceful-fs": "^4.2.11",
    "handsontable": "^16.1.0",
    "jimp": "^0.22.0",
    "pdfjs-dist": "^4.4.168",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite-plugin-node-polyfills": "^0.24.0",
    "xlsx": "0.18.5"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.9.2",
    "vite": "^7.1.7"
  },
  "build": {
    "asar": true,
    "asarUnpack": [
      "dist/excel_handler/**/*",
      "node_modules/@google/genai/**/*"
    ],
    "appId": "com.alcs.documentocr",
    "productName": "ALCS文書OCR",
    "directories": {
      "output": "build_output"
    },
    "files": [
      "dist/preload.js",
      "dist/**/*",
      "dist/excel_handler/**/*",
      "main.js",
      "package.json",
      ".env"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": "github"
  }
}
