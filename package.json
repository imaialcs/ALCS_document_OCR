{
  "name": "timecard-ocr-to-excel",
  "private": true,
  "version": "1.0.2",
  "description": "タイムカード画像をOCRで読み取り、データを処理し、Excelファイルとしてエクスポートするアプリケーションです。",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "dist": "npm run build && electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "@google/genai": "^1.16.0",
    "debug": "^4.4.1",
    "dotenv": "^17.2.2",
    "electron-log": "^5.1.5",
    "electron-updater": "^6.1.7",
    "graceful-fs": "^4.2.11",
    "pdfjs-dist": "^4.4.168",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xlsx": "0.18.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11"
  },
  "build": {
    "asar": false,
    "appId": "com.alcs.timecardocr",
    "productName": "タイムカード OCR to Excel",
    "files": [
      "dist/",
      "main.js",
      "preload.js",
      "package.json",
      ".env"
    ],
    "extraResources": [
      "node_modules/electron-log",
      "node_modules/electron-updater",
      "node_modules/graceful-fs",
      "node_modules/debug"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "npmRebuild": false,
    "buildDependenciesFromSource": true
  }
}



